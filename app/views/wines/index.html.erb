<h1>Listing wines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Appellation</th>
      <th>Bottle price</th>
      <th>Glass price</th>
      <th>Color</th>
      <th>Nose</th>
      <th>Mouth</th>
      <th>Logo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @wines.each do |wine| %>
      <tr>
        <td><%= wine.name %></td>
        <td><%= wine.type %></td>
        <td><%= wine.appellation %></td>
        <td><%= wine.bottle_price %></td>
        <td><%= wine.glass_price %></td>
        <td><%= wine.color %></td>
        <td><%= wine.nose %></td>
        <td><%= wine.mouth %></td>
        <td><%= wine.logo %></td>
        <td><%= link_to 'Show', wine %></td>
        <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
        <td><%= link_to 'Destroy', wine, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

