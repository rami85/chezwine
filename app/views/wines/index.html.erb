<div class="row">
  <h1>Listado de vinos</h1>
</div>

<div class="row">
  <div class="col-sm-12 col-md-8">
    <%= link_to 'Añadir vino', new_wine_path, class: 'btn btn-primary pull-right' %>
  </div>
</div>

<div class="row">
  <div class="col-sm-12 col-md-8">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>NOMBRE</th>
          <th>BODEGA</th>
          <th>TIPO</th>
          <th>DENOMINACÓN</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @wines.each do |wine| %>
          <tr>
            <td><%= wine.name %></td>
            <td><%= wine.wine_cell %></td>
            <td><%= wine.type.name %></td>
            <td><%= wine.appellation.name %></td>
            <td><%= link_to '', edit_wine_path(wine), class: 'glyphicon glyphicon-pencil' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-sm-12 col-md-8">
    <%= link_to 'Añadir vino', new_wine_path, class: 'btn btn-primary pull-right' %>
  </div>
</div>