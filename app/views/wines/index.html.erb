<script type="text/javascript">
  $(document).ready(function() {
    $('#winesTable').DataTable( {
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Spanish.json"
        }
    } );
} );  
</script>


<div class="container">
  <div class="row">
    <div class="col-xs-8">
      <h1>Vinos</h1>
    </div>

    <div class="col-xs-4">
      <div class="text-right" style="margin-top: 30px;">
        <%= link_to 'Nuevo vino', new_wine_path, class: 'btn btn-primary'%>
      </div>
    </div>
  </div>
</div>

<hr/>

<div class="container">
    <table id="winesTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Bodega</th>
          <th>Tipo</th>
          <th>Denominaci√≥n</th>
          <th>Vinoteca</th>
          <th>Restaurante</th>
        </tr>
      </thead>

      <tbody>
        <% @wines.each do |wine| %>
          <tr>
            <td><%= link_to wine.name, edit_wine_path(wine) %></td>
            <td><%= wine.wine_cell %></td>
            <td><%= wine.type.name %></td>
            <td><%= wine.appellation.name %></td>
            <td class="text-center">
              <% if wine.is_special_wine %>
                <span class="glyphicon glyphicon-ok" aria-hidden="true" style="color:lightGreen"></span>
              <% else %>
                <span class="glyphicon glyphicon-remove" aria-hidden="true" style="color:coral "></span>
              <% end %>
            </td>
            <td class="text-center">
              <% if wine.is_restaurant_wine %>
                <span class="glyphicon glyphicon-ok" aria-hidden="true" style="color:lightGreen"></span>
              <% else %>
                <span class="glyphicon glyphicon-remove" aria-hidden="true" style="color:coral "></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>