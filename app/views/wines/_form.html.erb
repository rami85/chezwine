<%= form_for(@wine) do |f| %>
  <% if @wine.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@wine.errors.count, "error") %> prohibited this wine from being saved:</h2>

      <ul>
      <% @wine.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Nombre'%><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label 'Bodega'%><br>
    <%= f.text_field :wine_cell %>
  </div>

  <div class="field">
    <%= f.label 'Vejez' %><br>
    <%= f.select :age_id, 
      options_from_collection_for_select(Age.all, :id, :name, @wine.age_id) %>
  </div>

  <div class="field">
    <%= f.label 'Cosecha' %><br>
    <%= f.text_field :harvest %>
  </div>

  <div class="field">
    <%= f.label 'Tipo de vino' %><br>
    <%= f.select :type_id, 
      options_from_collection_for_select(Type.all, :id, :name, @wine.type_id) %>
  </div>

  <div class="field">
    <%= f.label 'Tipo de uva' %><br>
    <%= f.collection_select :grape_type_ids, GrapeType.all, :id, :name, {}, { multiple: true } %>
  </div>

  <div class="field">
    <%= f.label 'Denominación' %><br>
    <%= f.select :appellation_id, 
      options_from_collection_for_select(Appellation.all, :id, :name, @wine.appellation_id) %>
  </div>
  <div class="field">
    <%= f.label 'Precio botella 500ml' %><br>
    <%= f.text_field :bottle_500_price %>
  </div>
  <div class="field">
    <%= f.label 'Precio botella 750ml' %><br>
    <%= f.text_field :bottle_750_price %>
  </div>
  <div class="field">
    <%= f.label 'Precio vaso' %><br>
    <%= f.text_field :glass_price %>
  </div>
  <div class="field">
    <%= f.label 'Color' %><br>
    <%= f.text_area :color, cols: 40, rows: 10%>
  </div>
  <div class="field">
    <%= f.label 'Nariz' %><br>
    <%= f.text_area :nose, cols: 40, rows: 10 %>
  </div>
  <div class="field">
    <%= f.label 'Boca' %><br>
    <%= f.text_area :mouth, cols: 40, rows: 10 %>
  </div>
  <div class="field">
    <%= f.label 'Imágen' %><br>
    <%= f.text_field :logo %>
  </div>
  <div class="actions">
    <%= f.submit 'GUARDAR' %>
  </div>
<% end %>
