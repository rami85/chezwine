<script type="text/javascript">
  $(document).ready(function() {
    $('#agesTable').DataTable( {
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Spanish.json"
        }
    } );
} );  
</script>


<div class="container">
  <div class="row">
    <div class="col-xs-8">
      <h1>Vejez</h1>
    </div>

    <div class="col-xs-4">
      <div class="text-right" style="margin-top: 30px;">
        <%= link_to 'Nueva vejez', new_age_path, class: 'btn btn-primary'%>
      </div>
    </div>
  </div>
</div>

<hr/>

<div class="container">
  <table id="agesTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
      <tr>
        <th>Nombre</th>
      </tr>
    </thead>

    <tbody>
      <% @ages.each do |age| %>
        <tr>
          <td><%= link_to age.name, edit_age_path(age) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
