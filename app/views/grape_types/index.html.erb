<h1>Listing grape_types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grape_types.each do |grape_type| %>
      <tr>
        <td><%= grape_type.name %></td>
        <td><%= grape_type.active %></td>
        <td><%= link_to 'Show', grape_type %></td>
        <td><%= link_to 'Edit', edit_grape_type_path(grape_type) %></td>
        <td><%= link_to 'Destroy', grape_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

