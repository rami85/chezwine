<script type="text/javascript">
  $(document).ready(function() {
    $('#grapesTable').DataTable( {
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.12/i18n/Spanish.json"
        }
    } );
} );  
</script>


<div class="container">
  <div class="row">
    <div class="col-xs-8">
      <h1>Tipos de uva</h1>
    </div>

    <div class="col-xs-4">
      <div class="text-right" style="margin-top: 30px;">
        <%= link_to 'Nuevo tipo de uva', new_grape_type_path, class: 'btn btn-primary'%>
      </div>
    </div>
  </div>
</div>

<hr/>

<div class="container final-container">
    <table id="grapesTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
      <thead>
        <tr>
          <th>Nombre</th>
        </tr>
      </thead>
      <tbody>
        <% @grape_types.each do |grape_type| %>
          <tr>
            <td><%= link_to grape_type.name, edit_grape_type_path(grape_type) %></td>
          </tr>
        <% end %>
      </tbody>
  </table>
</div>
